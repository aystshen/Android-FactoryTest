<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="?attr/xui_bottom_sheet_list_item_height"
              android:background="?attr/xui_bottom_sheet_list_item_bg"
              android:gravity="center"
              android:orientation="horizontal"
              android:paddingStart="?attr/xui_bottom_sheet_list_item_padding_horizontal"
              android:paddingEnd="?attr/xui_bottom_sheet_list_item_padding_horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_dialog_list_item_img"
        android:layout_width="?attr/xui_bottom_sheet_list_item_icon_size"
        android:layout_height="?attr/xui_bottom_sheet_list_item_icon_size"
        android:layout_marginEnd="?attr/xui_bottom_sheet_list_item_icon_margin_right"
        android:contentDescription="Item icon"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/bottom_dialog_list_item_title"
        style="?attr/xui_bottom_sheet_list_item_text_style"
        android:textAppearance="?attr/xui_bottom_sheet_list_item_text_appearance"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_dialog_list_item_point"
        style="?attr/XUITipPointStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Tips dot"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="?attr/xui_bottom_sheet_list_item_tip_point_margin_left"
        android:visibility="gone"/>

    <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <ViewStub
        android:id="@+id/bottom_dialog_list_item_mark_view_stub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout="@layout/xui_bottom_sheet_list_item_mark"/>
</LinearLayout>